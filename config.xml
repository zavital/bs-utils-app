<?xml version='1.0' encoding='utf-8'?>
<widget version="34"
    id="com.bidspirit.tools"
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:gap="http://phonegap.com/ns/1.0"
    >
 
    <name>Tools</name>
    <description>
        Bidspirit tools
    </description>
    <author email="zemer@bidspirit.com" href="http://bidspirit.com">
        Zemer avital
    </author>

    <content src="index.html" />
    
    <access origin="*" />
    
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.file" version="1.3.1" />
    <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
    <gap:plugin name="com.phonegap.plugin.statusbar" version="1.1.0" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" version="1.0.0"  />
    
    <gap:plugin name="com.orcasinc.cordova.inappbrowser" version="1.0.3" />
    <gap:plugin name="com.ohh2ahh.plugins.appavailability" version="0.3.1" />
    <plugin name="com.phonegap.plugins.pushplugin" spec="2.5.0" source="pgb" />
    
    <gap:plugin name="com.danielcwilson.plugins.googleanalytics" version="0.6.1" />
    
    <plugin name="cordova-plugin-dialogs" spec="1.1.1" source="pgb" />
    
    <plugin name="nl.x-services.plugins.calendar" spec="4.2.4" source="pgb" />
    
    <preference name="android-build-tool" value="gradle" />
    
    <gap:platform name="android" />
    <gap:platform name="ios" />
    
    
        
    <icon src="icon.png" />
    
    
    
    <icon src="icons/ios/ios_57x57.png" gap:platform="ios" width="57" height="57" />
	<icon src="icons/ios/ios_72x72.png" gap:platform="ios" width="72" height="72" />
	<icon src="icons/ios/ios_76x76.png" gap:platform="ios" width="76" height="76" />
	<icon src="icons/ios/ios_152x152.png" gap:platform="ios" width="152" height="152" />
	<icon src="icons/ios/ios_114x114.png" gap:platform="ios" width="114" height="114" />
	<icon src="icons/ios/ios_50x50.png" gap:platform="ios" width="50" height="50" />
	<icon src="icons/ios/ios_100x100.png" gap:platform="ios" width="100" height="100" />
	<icon src="icons/ios/ios_60x60.png" gap:platform="ios" width="60" height="60" />
	<icon src="icons/ios/ios_120x120.png" gap:platform="ios" width="120" height="120" />
    
    
    
    <feature name="http://api.phonegap.com/1.0/network" />
    <feature name="http://api.phonegap.com/1.0/file" />
    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name='phonegap-version' value='cli-5.2.0' />
    <preference name="EnableViewportScale" value="true" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    
    <feature name="Calendar">
	  <param name="android-package" value="nl.xservices.plugins.Calendar" />
	</feature>
	
	<feature name="Calendar">
    	<param name="ios-package" value="Calendar" />
	</feature>

	<plugin name="de.appplant.cordova.plugin.background-mode" spec="0.6.4" source="pgb" />
    
    <feature name="PushPlugin">
  		<param name="ios-package" value="PushPlugin" />
	</feature>
	
	<feature name="PushPlugin" >
    	<param name="android-package" value="com.amazon.cordova.plugin.PushPlugin"/>
	</feature>
	
	<gap:config-file platform="android" parent="/manifest/application">
    	<activity android:launchMode="singleInstance" />
	</gap:config-file>
	
	 <gap:config-file platform="ios" parent="LSApplicationQueriesSchemes" mode="replace">
		<array>
			<string>puffin</string>
			<string>puffinFree</string>
		</array>
    </gap:config-file>
	
	
	
    
	<preference name="orientation" value="portrait" />
	
	<preference name="DisallowOverscroll" value="true" />
	 
     
</widget>
